<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/numofQuestion"
            android:layout_width="wrap_content"
            style="@style/SecondaryTextStyle"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:layout_below="@id/circularProgressBar"
            android:layout_marginTop="@dimen/_5ssp"
            android:text=" Questions 1/10 " />


        <ProgressBar
            android:id="@+id/circularProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/circular_shape"
            android:indeterminate="false"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/shape_circular_progress_bar"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/timeTxt"
            style="@style/TitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/circularProgressBar"
            android:layout_alignTop="@id/circularProgressBar"
            android:layout_alignEnd="@id/circularProgressBar"
            android:layout_alignBottom="@id/circularProgressBar"
            android:gravity="center"
            android:text="60"
            android:textColor="@color/white" />



    </RelativeLayout>
</FrameLayout>