<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:elevation="@dimen/_5ssp"
    app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            style="@style/TitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your Score!"
            android:padding="@dimen/_5ssp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/txt_color" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/sad_gif" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Opps!"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_5ssp"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tvScore"
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5 / 10"
            android:textSize="@dimen/_24sdp"
            android:elevation="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/tvScore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:visibility="gone"
            android:padding="@dimen/_5ssp"
            android:text="You answered 3 questions correctly and 7 questions wrong."
            android:textColor="#7E7979" />

        <TextView
            android:id="@+id/tvScore1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:padding="@dimen/_5ssp"
            android:fontFamily="@font/roboto_medium"
            android:text="You did a greate job, Learn more by taking again Quiz"
            android:textColor="@color/txt_color" />

        <TextView
            android:id="@+id/tvTrayAgain"
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/red_btn_card"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:text="Try Again"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>